<% layout("/layouts/boilerplate.ejs") %>
    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3>
                <%= listing.title %>
            </h3>
        </div>
        <div class="card col-6 offset-3 show-card listing-card">
            <img src="<%= listing.image.url %>" class="show-img  card-img-top" alt="listing-image">
            <div class="card-body mt-2">
                <!-- owner -->
                <p class="card-next text-muted">
                    <i class="fa-solid fa-user"></i>
                    Owned by: <i> <%= listing.owner.username %></i><br>
                </p>

                <p class="card-text"><%= listing.description %> <br> </p>

                 <p class="card-text mb-2">
                    <span class="badge bg-secondary">
                        <i class="fa-solid fa-tag"></i> <%= listing.category %>
                    </span>
                </p>

                <p class="card-text fw-bold fs-5"> 
                    <i class="fa-solid fa-indian-rupee-sign"></i>
                    <%= listing.price.toLocaleString("en-IN") %> / night
                </p>

                <p class="card-text">
                    <i class="fa-solid fa-location-dot text-danger"></i>
                    <%= listing.location %>, <%= listing.country %>
                </p>
            </div>
        </div>

            <% if(currentUser &&listing.owner._id.equals(currentUser._id))  { %>
        
            <div class="btns col-7">
                <form action="/listings/<%= listing._id %>/edit">
                    <button class="btn btn-dark offset-3 edit-btn ">Edit</button>
                </form>

                <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
                    <button class="btn btn-dark offset-5 delete-btn">Delete</button>
                </form>
            </div>
            <% } %>
       
        <br>


        <!-- Review -->
    
        <div class="col-8 offset-3 mb-3">
            
            <% if(currentUser)  { %>
                <hr>
            <h4>Leave a Review</h4>
            <form method="post" action="/listings/<%= listing._id %>/reviews" novalidate class="needs-validation">

                <!-- <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating</label>
                    <input class="form-range" min="1" max="5" type="range" name="review[rating]" id="rating"> <br>
                </div> -->

                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating</label>
                    <fieldset class="starability-slot">
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />

                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>

                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>

                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>

                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>

                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>

                </div>
                <div class="mb-3 mt-3">
                    <label class="form-label" for="comment">Comment</label>
                    <textarea class="form-control" name="review[comment]" id="comment" cols="30" rows="5"
                        required></textarea>

                    <div class="invalid-feedback">
                        Please add some comment for review
                    </div>

                </div>
                <button class="btn btn-outline-dark">Submit</button>
                <hr>
                <% } %>
            </form>
            
            <% if(listing.reviews.length > 0 ) { %>
            <div class="row g-3">
                <p><b>All Reviews</b></p>
                <% for(review of listing.reviews) { %>
                    <div class="card col-5 mb-3 ms-3 shadow-sm h-100">

                        <div class="card-body">
                            <h5 class="card-title">@<%= review.author.username %></h5>
                            <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                            <p class="card-text">"<%= review.comment %>"</p>
                        </div> 

                        <% if(currentUser)  { %>
                        <form method="post"
                            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                            <button class="btn btn-sm btn-dark mt-2 mb-2">Delete</button>
                        </form>
                        <% } %>
                    </div>
                    <% } %>
            </div>
            <% } %>
        </div>
    </div> 